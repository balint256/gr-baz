<?xml version="1.0"?>
<!--
###################################################
##Message callback
###################################################
 -->
<block>
	<name>Message Callback</name>
	<key>baz_message_callback</key>
	<category>Message Tools</category>
	<import>from baz import message_callback</import>
	
	<make>message_callback.message_callback(msgq=$(id)_msgq_in,#slurp
#if $dummy() == False
#if str($eval_mode) == 'raw'
	callback=self.set_$target#slurp
#else
	callback=$target()#slurp
#end if
	, msg_part="$msg_part", custom_parts=$custom_parts,#slurp
#end if
	dummy=$dummy, consume_dummy=$consume_dummy, print_stdout=$print_stdout#slurp
)
	</make>

	<param>
		<name>Name</name>
		<key>name</key>
		<value>Descriptive name</value>
		<type>string</type>
	</param>
	
	<param>
	    <name>Dummy mode</name>
	    <key>dummy</key>
	    <value>False</value>
	    <type>bool</type>
	    <hide>#if str($dummy) == 'False' then 'part' else 'none'#</hide>
	    <option>
		    <name>Yes</name>
		    <key>True</key>
	    </option>
	    <option>
		    <name>No</name>
		    <key>False</key>
	    </option>
	</param>
	
	<param>
	    <name>Dummy Consume</name>
	    <key>consume_dummy</key>
	    <value>False</value>
	    <type>bool</type>
	    <hide>#if str($consume_dummy) == 'False' then 'part' else 'none'#</hide>
	    <option>
		    <name>Yes</name>
		    <key>True</key>
	    </option>
	    <option>
		    <name>No</name>
		    <key>False</key>
	    </option>
	</param>
	
	<param>
	    <name>Print</name>
	    <key>print_stdout</key>
	    <value>False</value>
	    <type>bool</type>
	    <hide>#if str($print_stdout) == 'False' then 'part' else 'none'#</hide>
	    <option>
		    <name>Yes</name>
		    <key>True</key>
	    </option>
	    <option>
		    <name>No</name>
		    <key>False</key>
	    </option>
	</param>

	<param>
	    <name>Evaluation mode</name>
	    <key>eval_mode</key>
	    <value>raw</value>
	    <type>enum</type>
	    <hide>#if str($eval_mode) == 'raw' then 'part' else 'none'#</hide>
	    <option>
		    <name>Raw</name>
		    <key>raw</key>
	    </option>
	    <option>
		    <name>String</name>
		    <key>string</key>
	    </option>
	</param>

	<param>
		<name>Message Part</name>
		<key>msg_part</key>
		<type>enum</type>
		<option>
			<name>Arg 1</name>
			<key>arg1</key>
		</option>
		<option>
			<name>Type</name>
			<key>type</key>
		</option>
		<option>
			<name>String</name>
			<key>msg</key>
		</option>
		<option>
			<name>Arg 2</name>
			<key>arg2</key>
		</option>
		<option>
			<name>Length</name>
			<key>length</key>
		</option>
		<option>
			<name>Custom</name>
			<key>custom</key>
		</option>
	</param>
	
	<param>
		<name>Custom Parts</name>
		<key>custom_parts</key>
		<value></value>
		<type>string</type>
		<hide>#if str($msg_part) == 'custom' then 'none' else 'part'#</hide>
	</param>
	
	<param>
		<name>Variable</name>
		<key>target</key>
		<value></value>
		<!--<type>raw</type>-->
		<type>$eval_mode</type>
		<hide>#if str($dummy) == 'False' then 'part' else 'none'#</hide>
	</param>

	<check>(str($dummy) == 'True') or (len("$target()") &gt; 0)</check>

	<sink>
		<name>in</name>
		<type>msg</type>
	</sink>
</block>
