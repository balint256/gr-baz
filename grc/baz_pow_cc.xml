<?xml version="1.0"?>
<block>
    <name>Power</name>
    <key>pow_cc</key>
    <category>Operators</category>
    <import>from gnuradio import gr</import>
	<import>import baz</import>
    <make>baz.pow_cc($exponent, $div_exp)</make>
	<callback>set_exponent($exponent)</callback>
	<callback>set_division_exponent($div_exp)</callback>
	
  <param>
		<name>Exponent</name>
		<key>exponent</key>
		<value>2.0</value>
		<type>real</type>
  </param>
  <param>
		<name>Division exponent</name>
		<key>div_exp</key>
		<value>0.0</value>
		<type>real</type>
		<hide>#if $div_exp() == 0.0 then 'part' else 'none'#</hide>
  </param>
<!-- Must come before sink/source -->
  <!--<check></check>-->
  
  <sink>
    <name>in</name>
    <type>complex</type>
    <nports>1</nports>
  </sink>
    
  <source>
    <name>out</name>
    <type>complex</type>
    <nports>1</nports>
  </source>

    <doc>
Raise signal to complex power.
    </doc>
</block>
