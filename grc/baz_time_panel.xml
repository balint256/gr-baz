<?xml version="1.0"?>
<!--
###################################################
## Time Panel block
###################################################
-->
<block>
	<name>WX GUI Time Panel</name>
	<key>baz_time_panel</key>
	<category>Instrumentation/WX</category>
	
	<import>from baz import time_panel</import>

	<make>#set $parent = $notebook() and 'self.%s.GetPage(%s)'%$notebook() or 'self'
time_panel.time_panel_sink($(parent).GetWin(), $item_size, $samp_rate, $rate, $relative, '$mode')
#if not $grid_pos()
$(parent).Add(self.$(id).win)
#else
$(parent).GridAdd(self.$(id).win, $(', '.join(map(str, $grid_pos()))))
#end if</make>

	<callback>set_rate($rate)</callback>
	<callback>set_relative($relative)</callback>
	<callback>ignore_next($ignore_next_trigger)</callback>
	<callback>set_display_mode($mode)</callback>

	<param>
		<name>Item Size</name>
		<key>item_size</key>
		<value>1</value>
		<type>int</type>
	</param>
	
	<param>
		<name>Sample Rate</name>
		<key>samp_rate</key>
		<value>samp_rate</value>
		<type>int</type>
	</param>

	<param>
		<name>Update Rate (Hz)</name>
		<key>rate</key>
		<value>1</value>
		<type>real</type>
	</param>
	
	<param>
		<name>Relative</name>
		<key>relative</key>
		<value>True</value>
		<type>bool</type>
		<!--<hide>#if $ac_couple() then 'none' else 'part'#</hide>-->
		<option>
			<name>No</name>
			<key>False</key>
		</option>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
	</param>
	
	<param>
		<name>Ignore Next Triggers</name>
		<key>ignore_next_trigger</key>
		<value>[]</value>
		<type>raw</type>
	</param>
	
	<param>
		<name>Display Mode</name>
		<key>mode</key>
		<value>auto</value>
		<type>enum</type>
		<hide>#if $mode() == 'auto' then 'part' else 'none'#</hide>
		<option>
			<name>Automatic</name>
			<key>auto</key>
		</option>
		<option>
			<name>Relative</name>
			<key>relative</key>
		</option>
		<option>
			<name>Absolute</name>
			<key>absolute</key>
		</option>
	</param>
	
	<!--<param>
		<name>Window Size</name>
		<key>win_size</key>
		<value></value>
		<type>int_vector</type>
		<hide>#if $win_size() then 'none' else 'part'#</hide>
	</param>-->
	
	<param>
		<name>Grid Position</name>
		<key>grid_pos</key>
		<value></value>
		<type>grid_pos</type>
	</param>
	
	<param>
		<name>Notebook</name>
		<key>notebook</key>
		<value></value>
		<type>notebook</type>
	</param>
	
	<check>$item_size &gt; 0</check>
	<check>$rate &gt; 0</check>
	
	<sink>
		<name>in</name>
		<type>byte</type>
		<vlen>$item_size</vlen>
	</sink>

    <source>
        <name>status</name>
        <type>message</type>
        <optional>1</optional>
    </source>
	
	<doc></doc>
</block>
